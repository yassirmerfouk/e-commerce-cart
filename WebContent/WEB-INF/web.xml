<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
	<display-name>e-commerce-cart</display-name>
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
	<context-param>
		<param-name>BOOTSTRAP_ASSETS</param-name>
		<param-value>/e-commerce-cart/assets/bootstrap/</param-value>
	</context-param>
	<context-param>
		<param-name>FRONT_OFFICE_ASSETS</param-name>
		<param-value>/e-commerce-cart/assets/front-office/</param-value>
	</context-param>
	<context-param>
		<param-name>BACK_OFFICE_ASSETS</param-name>
		<param-value>/e-commerce-cart/assets/back-office/</param-value>
	</context-param>
	<context-param>
		<param-name>LOGIN_ASSETS</param-name>
		<param-value>/e-commerce-cart/assets/login/</param-value>
	</context-param>
	<context-param>
		<param-name>INCLUDES</param-name>
		<param-value>/e-commerce-cart/WEB-INF/includes/</param-value>
	</context-param>
	<context-param>
		<param-name>PRODUCTS_IMAGES</param-name>
		<param-value>/e-commerce-cart/images/products/</param-value>
	</context-param>
</web-app>